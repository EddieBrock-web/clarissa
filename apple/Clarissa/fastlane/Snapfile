# Clarissa AI - Snapshot Configuration
# Configures devices, languages, and settings for automated screenshot capture

# iOS Devices - matching App Store requirements
devices([
  "iPhone 17 Pro Max",      # 6.9" display
  "iPhone 17 Pro",          # 6.7" display (6.5" class)
  "iPad Pro 13-inch (M5)"   # 13" iPad
])

# Languages to capture
languages([
  "en-US"
])

# UI Test scheme name
scheme("ClarissaUITests")

# Xcode project path
project("./Clarissa.xcodeproj")

# Output directory for screenshots
output_directory("./fastlane/screenshots")

# Clear previous screenshots before capturing new ones
clear_previous_screenshots(true)

# Override the status bar to show clean time/battery
override_status_bar(true)

# Skip opening the HTML summary after completion
skip_open_summary(false)

# Stop on first error or continue capturing
stop_after_first_error(false)

# Number of retries if a screenshot fails
number_of_retries(1)

# Dark mode support - capture both if needed
# dark_mode(true)

# Concurrent simulators (set to 1 for stability)
concurrent_simulators(true)

# Erase simulator before running
erase_simulator(false)

# Reinstall app before running (useful for clean state)
# reinstall_app(true)
# app_identifier("dev.rye.clarissa")

